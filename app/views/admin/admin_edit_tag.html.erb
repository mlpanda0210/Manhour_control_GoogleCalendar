<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
    <%= form_for(@tag, url: admin_admin_update_tag_path(:id =>@tag.id)) do |f| %>
    <%= f.label "タグネーム" %>
    <%= f.text_field :name, class: 'form-control' %>
    <br>
    <%= f.label "タグの説明" %>
    <%= f.text_field :description, class: 'form-control' %>
    <br>
    <%= f.submit "更新する",class: 'btn btn-primary btn-block' %>
    <% end %>
  </div>
</div>
