<p><%=image_tag(@user.picture) %></p>
<p>ユーザー：<%= @user.name %></p>
<% @column_graphs.each_with_index do |graph, i| %>
<%= link_to high_chart(graph.options[:subtitle], graph) ,admin_admin_show_month_project_path(graph: graph.options[:title][:text],id: @user.id) %>
<% end %>
<ul>
  <% @pie_graphs.each.with_index(1) do |graph,index| %>
   <% if index<3 %>
     <li class="engraph col-md-6 col-sm-6" style="margin-bottom: 7em;">
       <% if graph %>
       <div id="chart1" style="width:100%; height:100%; margin:0 auto;">
         <%= link_to high_chart(graph.options[:title][:text], graph) ,admin_admin_show_month_project_path(graph: graph.options[:title][:text],id: @user.id) %>
       </div>
       <% end %>
     </li>
   <% else %>
      <li class="engraph col-md-3 col-sm-3">
        <% if graph %>
        <div id="chart1" style="width:90%; height:90%; margin:0 auto;">
          <%= link_to high_chart(graph.options[:title][:text], graph) ,admin_admin_show_month_project_path(graph: graph.options[:title][:text],id: @user.id)%>
        </div>
        <% end %>
      </li>
   <% end %>
  <% end %>
</ul>
